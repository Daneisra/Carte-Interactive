# ----- Types MIME (IMPORTANT pour les modules) -----
<IfModule mod_mime.c>
  AddType text/javascript .mjs
  AddType application/javascript .js
  AddType application/json .json
  AddType text/css .css
  AddType audio/mpeg .mp3
  AddType image/png .png
  AddType image/jpeg .jpg .jpeg
  AddType image/webp .webp
</IfModule>

# ----- Cache raisonnable -----
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 1m"
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType text/javascript "access plus 7 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType audio/mpeg "access plus 30 days"
</IfModule>

# ----- CORS léger + seek audio -----
<IfModule mod_headers.c>
  <FilesMatch "\.(png|jpe?g|webp|mp3|js|mjs|css|json)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
  Header set Accept-Ranges "bytes"
</IfModule>

# (optionnel) empêcher l'auto-négociation parfois gênante
Options -MultiViews
